{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2022",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2022",
    "useDefineForClassFields": false,
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@environment": [
        "src/environments/environment.ts"
      ],
      "@project": [
        "package.json"
      ]
    }
  }
}
