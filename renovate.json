{
  "extends": [
    ":dependencyDashboard",
    ":prConcurrentLimit10",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "prHourlyLimit": 3,
  "rebaseWhen": "behind-base-branch",
  "updateInternalDeps": true,
  "postUpdateOptions": ["yarnDedupeFewer"],
  "packageRules": [
    {
      "matchPaths": ["packages/**"],
      "rangeStrategy": "replace"
    },
    {
      "matchPaths": ["examples/**"],
      "rangeStrategy": "pin"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
